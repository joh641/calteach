.container
  .header
    %h1 Users
    = render "settings"

  %table.table.table-striped.sortable
    %thead
      %tr
        %th Name
        %th User Type
        %th Email
        %th Phone
        %th.sorttable_nosort Actions
    .tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.category_str
          %td= user.email
          %td= user.phone
          %td
            = link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-default btn-sm', :id => "edit#{user.id}"
            - if user.can_deactivate?
              = link_to 'Deactivate', admin_user_path(user), :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm', :id => "destroy#{user.id}"
            - elsif user.inactive
              = link_to 'Activate', activate_admin_user_path(user), :method => :put, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm', :id => "activate#{user.id}"
            / :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
