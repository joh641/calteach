.container
  %h1 Users
  .new-btn= link_to 'Create New User', new_admin_user_path, :class => 'btn btn-primary'
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th User Type
        %th Email
        %th Phone
        %th Actions
    .tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.category_str
          %td= user.email
          %td= user.phone
          %td
            = link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-default btn-sm'
            = link_to 'Destroy', admin_user_path(user), :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-sm'