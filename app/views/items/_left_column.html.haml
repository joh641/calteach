.left-column-container.column.inventory
  .search-bar-container.left-container
    %h2 Search
    = form_tag items_path, :method => :get, :id => 'search_form' do
      %input{:class => 'search-bar', :type => 'text', :placeholder => 'Search for an Item...', :name => 'query', :value => @query}
      = submit_tag 'Search', {:id => 'search_submit', :class => "calteach-button"}
  .categories-container.left-container
    %h2 Categories
    %ul
      - @all_categories.each do |category|
        %li.category{:data => {:category => category}}>
          / hardcoded for now
          %i
          .category-name= category
