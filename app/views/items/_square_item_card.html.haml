.item-wrapper
  = link_to item_path(item) do
    .item-container{:data => {:item_id => item.id}}
      .item-info
        .img-wrapper
          = image_tag(item.image.url(:medium))
        .title= truncate(item.name, :length => 34)
        .wrapper
          .subtitle{:class => (item.is_available ? "available" : "unavailable")}= item.available