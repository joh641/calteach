#container
  .content
    = render partial: 'left_column'
    .right-column-container.column
      .item-detail
        .item-left
          %h2#name= @item.name
          #image= image_tag @item.image.url(:medium), :class => "img-rounded"

        .item-right
          = form_tag checkout_admin_reservation_path do
            = label_tag :quantity, "Quantity"
            = select_tag :quantity, options_for_select(0..@item.quantity)
            %br
            = label_tag :email, "User's Email"
            = text_field_tag :email
            = hidden_field_tag :item, @item.id
            = submit_tag 'Checkout Item'
          #backlink
            = link_to 'Back to Description', item_path(@item)

      %br

