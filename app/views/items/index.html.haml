#container
    .header-container.row
        %h1 Calteach Inventory
    .content.row
        .left-column-container.column.col-md-3
            %h2 Search
            .search-bar-container
                = form_tag items_path, :method => :get, :id => 'search_form' do
                    %input{:class => 'search-bar', :type => 'text', :placeholder => 'Search for an Item...', :name => 'query', :value => @query}
                    = submit_tag 'Search', :id => 'search_submit'
            %h2 Categories
            %ul
                - @all_categories.each do |category|
                    %li= category
        .right-column-container.column.container.col-md-8
            - if @items.length > 0
                - @items.in_groups_of(4, false).each_with_index do |group, index|
                    .row
                        - group.each do |item|
                            .col-md-3
                                .item-container{:data => {:item_id => item.id}}
                                    .item-info
                                        .image=link_to image_tag(item.image.url(:medium)), item_path(item)
                                        .title=item.name
                                    - if item.quantity == 0
                                        .subtitle.unavailable Unavailable
                                    - else
                                        .subtitle.available Available
            - else
                No Results! Try searching "Globe"
= link_to 'Add an Item', new_item_path
