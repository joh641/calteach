#container
    .header-container.row
        %h1 Calteach Inventory
    .content.row
        .left-column-container.column.col-md-3
            %h2 Categories
            %ul
                - @all_categories.each do |category|
                    %li= category
        .right-column-container.column.container.col-md-8
            .row
                - @all_items.each do |item|
                    .item-container.col-md-3
                        .item= link_to image_tag(item.image.url(:medium)), item_path(item)
                        .subtitle Available
= link_to 'Add an Item', new_item_path
